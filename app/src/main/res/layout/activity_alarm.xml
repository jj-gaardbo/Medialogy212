<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jensjakupgaardbo.medialogy212.AlarmActivity">

    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="148dp" android:id="@+id/add_alarm"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_centerHorizontal="true" android:layout_alignParentBottom="true"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/timesList"
            android:layout_above="@+id/add_alarm" android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" android:layout_marginTop="258dp"/>
</RelativeLayout>
