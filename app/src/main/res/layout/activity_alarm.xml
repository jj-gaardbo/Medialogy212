<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context="com.example.jensjakupgaardbo.medialogy212.AlarmActivity">

    <fragment
            android:id="@+id/map_fragment_alarm"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/alarm_name" android:layout_alignParentStart="true" />

    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/timesList"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" android:layout_marginTop="340dp" android:scrollbars="none"
            android:layout_alignBottom="@+id/add_alarm" android:layout_marginBottom="38dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Alarm name"
            android:ems="10"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
        android:id="@+id/alarm_name"
        android:cursorVisible="true"
        android:layout_below="@+id/appbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="@dimen/fab_margin"
            android:clickable="true"
            app:fabSize="normal" app:srcCompat="@drawable/ic_plus_alarm"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/add_alarm"/>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="@dimen/appbar_padding_top"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp"
        app:expanded="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="0dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/cancel_alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_gravity="left|center_vertical"
                android:background="@drawable/ic_cancel"
                android:onClick="cancelAlarm"
                android:text="Cancel" />

            <ImageButton
                android:id="@+id/save_alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/ic_check"
                android:onClick="saveAlarm"
                android:text="Save" />

            <ImageButton
                android:id="@+id/delete_alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal|center_vertical"
                android:background="@drawable/ic_delete"
                android:onClick="deleteAlarm"
                android:text="Delete" />
        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>
</RelativeLayout>
