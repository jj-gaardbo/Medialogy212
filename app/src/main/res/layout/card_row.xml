<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/myRectangleView"
        android:layout_width="0dp"
        android:layout_height="175dp"
        android:adjustViewBounds="false"
        android:background="@drawable/rectangle"
        android:cropToPadding="true"
        android:paddingTop="5dp"

        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="54dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        android:layout_marginEnd="54dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/nearMarkerTextVIew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="116dp"
        android:layout_marginStart="117dp"
        android:text="near marker"
        android:textColor="@color/accent_material_dark"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/myRectangleView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/myRectangleView"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:id="@+id/singleCardTextView"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/accent_material_dark"
        android:textSize="18sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="22dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wakeUpTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"

        android:text="wakeUpTime"
        android:textAlignment="center"
        android:textColor="@color/accent_material_dark"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/gotoBedTextView"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/gotoBedTextView" />

    <TextView
        android:id="@+id/gotoBedTextView"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="00:00"
        android:textColor="@color/accent_material_dark"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/singleCardTextView"
        app:layout_constraintTop_toBottomOf="@+id/singleCardTextView"
        android:layout_marginRight="13dp"
        app:layout_constraintRight_toRightOf="@+id/singleCardTextView"
        app:layout_constraintHorizontal_bias="0.612" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/gotoBedTextView"
        app:layout_constraintLeft_toLeftOf="@+id/myRectangleView"
        app:layout_constraintTop_toTopOf="@+id/gotoBedTextView"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_moon"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/wakeUpTextView"
        app:layout_constraintLeft_toLeftOf="@+id/myRectangleView"
        app:layout_constraintTop_toTopOf="@+id/wakeUpTextView"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_sun"

        />

</android.support.constraint.ConstraintLayout>