<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jensjakupgaardbo.medialogy212.CardsTest">

    <ListView
        android:id="@+id/cardListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/refreshListViewButton">

    </ListView>

    <Button
        android:id="@+id/refreshListViewButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="41dp"
        android:text="Button"
        android:layout_alignBaseline="@+id/buttonGotoDatabase"
        android:layout_alignBottom="@+id/buttonGotoDatabase"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/buttonGotoDatabase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:onClick="gotoDatabaseViewer"
        android:text="gotoDatabaseView"
        android:layout_marginStart="43dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
