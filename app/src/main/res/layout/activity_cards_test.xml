<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jensjakupgaardbo.medialogy212.CardsTest">

    <ListView
        android:id="@+id/cardListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:layout_below="@+id/addAlarmBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
    </ListView>

    <Button
        android:id="@+id/addAlarmBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goToAddAlarm"
        android:text="Add alarm"
        android:layout_alignBaseline="@+id/buttonGotoDatabase"
        android:layout_alignBottom="@+id/buttonGotoDatabase"
        android:layout_toEndOf="@+id/buttonGotoDatabase" />

    <Button
        android:id="@+id/buttonGotoDatabase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:onClick="gotoDatabaseViewer"
        android:text="gotoDatabaseView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/setAlarmBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="setAlarm"
        android:text="setAlarm"
        android:layout_alignBaseline="@+id/addAlarmBtn"
        android:layout_alignBottom="@+id/addAlarmBtn"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="23dp" />
</RelativeLayout>
